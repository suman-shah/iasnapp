<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>
    <style name="InputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>
    <!-- Greeting Section Text Style -->
    <style name="GreetingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Feature Button Style -->
    <style name="FeatureButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/feature_button_background</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Grid Button Style -->
    <style name="GridButton" parent="FeatureButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Search Bar Style -->
    <style name="SearchBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Email Support Button Style -->
    <style name="SupportButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/support_button_background</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    // game


    <!-- Style for Game Cells -->
    <style name="GameCellStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/cell_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for Buttons -->
    <style name="GameButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- General TextView Style -->
    <style name="ScoreTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- In your button style .xml -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:state_pressed">@color/button_pressed</item>
        <item name="android:state_enabled">@color/button_default</item>
    </style>


    <!-- Calculator Display Style -->
    <style name="CalculatorDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item><item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#333333</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Base theme for Calculator buttons --><style name="CalculatorButton">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">70dp</item>
    <item name="android:layout_columnWeight">1</item>
    <item name="android:layout_margin">4dp</item>
    <item name="android:padding">16dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:background">#424242</item>
</style>

    <!-- Number button style -->
    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:background">#FF9800</item>
    </style>

    <!-- Operation button style (+, -, /, *) -->
    <style name="CalculatorButton.Operation" parent="CalculatorButton">
        <item name="android:background">#03A9F4</item>
    </style>

    <!-- Function button style (sin, cos, etc.) -->
    <style
        name="CalculatorButton.Function"
        parent="CalculatorButton">
        <item name="android:background">#8BC34A</item>
    </style>

    <!-- Equals button style -->
    <style name="CalculatorButton.Equals" parent="CalculatorButton">
        <item name="android:background">#F44336</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Clear button style -->
    <style name="CalculatorButton.Clear" parent="CalculatorButton">
        <item name="android:background">#9E9E9E</item>
    </style>
</resources>